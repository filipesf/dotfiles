# Fuck this shit!
alias fuck='thefuck'

# Show/Hide files on Finder

alias showfiles='defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder'
alias hidefiles='defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder'

# Sublime shorthand
alias subl='sublime'


# YouTube Downloader
alias yt='youtube-dl -f mp4'


# Sketch free forever
alias sketch='rm Library/Application\ Support/com.bohemiancoding.sketch3/.sketch3'


# Shorthand to Sass compiling
alias sasswatch='sass --watch --sourcemap=none --no-cache'
alias sassupdate='sass --update --sourcemap=none --no-cache'

# Remove .DS_Store
alias rmdstore='find . -name .DS_Store -print0 | xargs -0 git rm -f --ignore-unmatch'


# Set proxy
alias msproxy='
export http_proxy=http://10.0.129.9:80;
export https_proxy=http://10.0.129.9:80;
npm config set proxy http://10.0.129.9:80;
npm config set https-proxy http://10.0.129.9:80;
git config --global http.proxy http://10.0.129.9:80;
git config --global https.proxy http://10.0.129.9:80'

alias msclean='
export http_proxy="";
export https_proxy="";
npm config rm proxy;
npm config rm https-proxy;
git config --global --unset http.proxy;
git config --global --unset https.proxy'


# Jekyll New Post
alias newpost='thor post:new'
