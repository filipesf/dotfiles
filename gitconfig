[include]
  path = ~/.gitconfig.local
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "status"]
  added = green
  changed = blue
  untracked = red
[color "diff"]
  meta = yellow
  old = red
  new = green
[log]
  # Better date formats in logs
  date = rfc
[alias]
  ad = add
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  up = push
  down = pull
  publish = push -u origin
  # Show number of commits from all authors.
  stats = shortlog -sn
  # Show detailed logs
  graph = log --graph --decorate --stat --date=iso --all
  # Show simplified logs
  overview = log --oneline --no-merges
  recap = "!f() { git log --oneline --no-merges --author=\"$(git config user.email)\"; }; f"
  # Update remote branches list locally
  refresh = remote update origin --prune
  # See todayâ€™s work
  today = "!f() { git log --since=\"00:00:00\" --all --no-merges --oneline --author=\"$(git config user.email)\"; }; f"
  yesterday = "!f() { git log --since=\"1 day ago\" --all --no-merges --oneline --author=\"$(git config user.email)\"; }; f"
  # Empty line between results from different files.
  find = "!git grep --break -C1"
  # Show your ten most recently checked out branches
  recent = for-each-ref --count=10 --sort=-committerdate refs/heads/ --format="%(refname:short)"
  # Compare commits in one branch against another, e.g. $ git compare tkt-0021 to develop
  compare = "!f() { git log --oneline $1..$2;  }; f"
[core]
  editor = vim
  excludesfile = ~/.gitignore
  whitespace = warn
[commit]
  template = ~/.gitcommit
  gpgsign = true
[push]
  default = current
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[github]
  user = filipesf
[gitlab]
  user = souzaff
[ghi]
  token = !security find-internet-password -a filipesf -s github.com -l 'ghi token' -w
[init]
  defaultBranch = main
[gpg "ssh"]
  allowedSignersFile = ~/.ssh/allowed_signers
[tag]
  gpgSign = true
[gpg]
	program = gpg
